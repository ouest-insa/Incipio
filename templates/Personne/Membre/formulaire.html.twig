<div class="row">
    <div class="col-md-7 col-xs-12">
        <div class="box box-info box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'membre.membre'|trans({}, 'personne') }}</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="col-md-2 col-xs-12">
                        {{ form_label(form.personne.prenom) }}
                    </div>
                    <div class="col-md-4 col-xs-12">
                        {{ form_widget(form.personne.prenom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.prenom) }}
                    </div>
                    <div class="col-md-1 col-xs-12">
                        {{ form_label(form.personne.nom) }}
                    </div>
                    <div class="col-md-5 col-xs-12">
                        {{ form_widget(form.personne.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.nom) }}
