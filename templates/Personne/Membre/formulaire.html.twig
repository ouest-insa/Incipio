                    <div class="col-md-1 col-xs-12">
                        {{ form_label(form.personne.codepostal) }}
                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_widget(form.personne.codepostal, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.codepostal) }}
                    </div>
                    <div class="col-md-1 col-xs-12">
                        {{ form_label(form.personne.ville) }}
                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_widget(form.personne.ville, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.ville) }}
                    </div>
                    <div class="col-md-1 col-xs-12">
                        {{ form_label(form.personne.pays) }}
                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_widget(form.personne.pays, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.pays) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 col-xs-12">
                        {{ form_label(form.nationalite) }}
                    </div>
                    <div class="col-md-9 col-xs-12">
                        {{ form_widget(form.nationalite, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nationalite) }}
                    </div>
                </div>
