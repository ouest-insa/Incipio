                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_widget(form.personne.sexe, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.sexe) }}
                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_label(form.promotion) }}
                    </div>
                    <div class="col-md-3 col-xs-12">
                        {{ form_widget(form.promotion, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.promotion) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 col-xs-12">
                        {{ form_label(form.personne.email) }}
                    </div>
                    <div class="col-md-9 col-xs-12">
                        {{ form_widget(form.personne.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.email) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 col-xs-12">
                        {{ form_label(form.personne.mobile) }}
                    </div>
                    <div class="col-md-9 col-xs-12">
                        {{ form_widget(form.personne.mobile, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.personne.mobile) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 col-xs-12">
                        {{ form_label(form.personne.adresse) }}
                    </div>
